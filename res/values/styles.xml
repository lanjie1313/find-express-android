    <!-- </style> -->


    <!-- <style name="chat_Anim_style2" parent="android:Theme.NoTitleBar"> -->
    <!-- <item name="android:windowAnimationStyle">@style/chat_AnimFade</item> -->
    <!-- </style> -->

    <style name="chat_horizontal_slide" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/chat_AnimFade2</item>
    </style>

