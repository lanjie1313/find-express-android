<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom|center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/activity_admin_addsite_siteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="站点名"
            android:singleLine="true"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/activity_admin_addsite_Lng1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="经度1"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/activity_admin_addsite_Lat1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="维度1"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/activity_admin_addsite_Lng2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="经度2"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/activity_admin_addsite_Lat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="维度2"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/activity_admin_addsite_Lng3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="经度3"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/activity_admin_addsite_Lat3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="维度3"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp
        "
        android:gravity="center" >

        <Button
            android:id="@+id/activity_admin_addsite_confim"
            style="@style/common_button_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="添加" />
    </LinearLayout>

</LinearLayout>