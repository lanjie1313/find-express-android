<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.runye.express.listview.HorizontalListView
            android:id="@+id/activity_admin_main_listview"
            android:layout_width="match_parent"
            android:layout_height="70dp" >
        </com.runye.express.listview.HorizontalListView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1" >

        <com.baidu.mapapi.map.MapView
            android:id="@+id/activity_admin_main__bmapsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" >
        </com.baidu.mapapi.map.MapView>

        <Button
            android:id="@+id/activity_admin_main__requestLoc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_style"
            android:text="定位"
            android:textColor="#FF000000" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/activity_admin_main_site"
            style="@style/common_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="站点管理" />

        <Button
            android:id="@+id/activity_admin_main_list"
            style="@style/common_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="列表模式" />
    </LinearLayout>

</LinearLayout>